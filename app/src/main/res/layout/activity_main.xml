<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/etiqutaPrincipal" android:textSize="24sp"/>
    <Button
            android:text="down"
            android:layout_width="126dp"
            android:layout_height="71dp"
            android:id="@+id/down"
            app:layout_constraintTop_toBottomOf="@+id/etiqutaPrincipal" android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/up" android:layout_marginEnd="8dp"/>
    <Button
            android:text="up"
            android:layout_width="126dp"
            android:layout_height="71dp"
            android:id="@+id/up" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/etiqutaPrincipal" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp"/>
    <Button
            android:text="generate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/generate" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="108dp"
            app:layout_constraintTop_toBottomOf="@+id/down" app:layout_constraintHorizontal_bias="0.498"/>

</android.support.constraint.ConstraintLayout>